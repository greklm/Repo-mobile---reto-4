<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/fondo1"
    tools:layout_editor_absoluteX="0dp"
    tools:context="dscont.com.dscont.pe.app_pomodoro.FullscreenActivity">
    <Button
        android:id="@+id/btn_Iniciar"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Iniciar"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/Linear_Layout_Contenedor_Android"
        android:layout_marginTop="5dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:background="@drawable/button"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/Linear_Layout_Contenedor_Android"
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@+id/tv_Titulo"
        tools:layout_constraintLeft_creator="1"
        android:background="@drawable/android"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:background="@drawable/downarrow"
            />
        <com.tistory.dwfox.dwrulerviewlibrary.view.ScrollingValuePicker
            android:id="@+id/myScrollingValuePicker"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"></com.tistory.dwfox.dwrulerviewlibrary.view.ScrollingValuePicker>
        <TextView
            android:id="@+id/tv_Valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_Titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pomodoro App"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:padding="6dp"
        android:background="@color/colorPrimaryDark"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
